/* 标题模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 99;
  background: rgba(0, 0, 0, .5);
  opacity: 0;
  transition: opacity 400ms ease-in;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal .dialog {
  width: 84%;
  height: 28%;
  background-color: #eceff4;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dialog .modal-item {
  height: 33.3%;
  width: 100%;
}
.dialog .diaryTitle{
  text-align: center;
  margin-top: 8px;
}
.dialog .inputBox{
  margin:0 auto;
  width:90%;
}
.dialog .inputBox input{
  background-color:#fff;
  border-radius:2px;
  font-size: 14px;
}
.modal-button {
  width: 100%;
  height: 100rpx;
  display: flex;
}
.modal-button view {
  width: 50%;
  border-top: 1px solid #E5E7ED;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
}
.modal-button view:first-child{
  color:green;
  border-right:1px solid #E5E7ED;
}

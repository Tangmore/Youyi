/* 底部评论盒子 */
.commentBox {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  z-index: 99;
  padding: 6px;
}
.commentBox  .bottomBar{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.bottomBar .inputBox{
  width: 82%;
  border: 1px solid #efefef;
  height: 34px;
  border-radius: 15px;
  margin-left: 10px;
  margin-right: 10px;
  padding-left: 10px;
  line-height: 34px;
  font-size: 16px;
}

/* pages/profile/profile.wxss */
.profileBox{
  position: relative;
}
.avatar{
  background-color: rgba(243, 188, 171, 0.6);
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.avatar .avatarImg{
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}
.avatar .nickName{
    position: absolute;
    bottom: 10px;
}
.profileBox .add {
  position: absolute;
  top: 0;
  right: 6px;
  z-index: 999;
  margin: 15px 10px;
  height: 35px;
  width: 35px;
}

/* tab切换 */
.tablist {
  display: flex;
  flex-direction: row;
}
.tablist .tab {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 50px;
    width: 25%;
    border-right: 1px solid #eceff4;
}
.tab .content{
    width: 25px;
    height: 50px;
    font-size: 12px;
    color: #B3B3B3;
}

.tab .image {
    width: 25px;
    height: 25px;
    margin-top: 10px;
}

.header .tablist {
    height: 50%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.add {
    float: right;
    margin: 15px 10px;
    height: 35px;
    width: 35px;
}


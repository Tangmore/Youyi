/* pages/profile/profile.wxss */
.profileBox{
  position: relative;
}
.avatar{
  background-color: rgba(0,0,0,.1);
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.avatar .avatarImg{
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}
.avatar .nickName{
    position: absolute;
    bottom: 10px;
}
.profileBox .add {
  position: absolute;
  top: 0;
  right: 6px;
  z-index: 999;
  margin: 15px 10px;
  height: 35px;
  width: 35px;
}

/* tab切换 */
.tablist{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    height: 50px;
    margin: 7.5px 0px;
    border-right: 1px solid #eceff4;
}
.tablist .tab{
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 12px;
    color: #B3B3B3;
    justify-content: space-between;
} 
.tab .image {
    width: 25px;
    height: 25px;
    margin-top: 10px;
}


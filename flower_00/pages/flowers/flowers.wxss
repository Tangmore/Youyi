/* pages/shoplist/shoplist.wxss */
  .infoAll{
     display: flex;
    flex-direction: column;
    padding: 4px; 
    background-color: #F9FAFE;
    border-bottom: 1px solid #ccc;
    position: relative; 
}
 .infoAll image{
    width:140px;
    height: 90px;
    margin:  0 auto;
} 
 .infoAll .describle{
    font-size: 0.6rem;
    display: flex;
    flex-direction: column;
    width: 620rpx;
    margin: 0 auto;
}
 .infoAll .describle>text:first-child{
    font-size: 14px;
    font-weight: bold;
    text-align: center;
}
 .infoAll .describle text:nth-child(2){
    color: #333;
}
 .infoAll .describle text>text{
    font-weight: 500;
}
/* 五星 打分*/
.shop-start{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.star-after{
    color: #e2e2e2;
}
.star-before{
    color: rgba(255, 160, 17, 0.933);
    position: absolute;
    top: 0;
    width: 55%;
    overflow: hidden;
}


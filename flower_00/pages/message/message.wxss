/* pages/message/message.wxss */

/* 组件灰色背景 */
page{
  background-color: #f1f1f1;
}

/* 卡片 */
.card{
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}
/* 标题 */
.card-title{
  font-size: 18px;
  margin-bottom: 12rpx;
}
/* 日期 */
.card-date{
  font-size: 14px;
  color: #ccc;
  padding-bottom: 20rpx;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid #ddd;
}
/* 图片 */
.card-img{
  width: 100%;
  height: 300rpx;
}
/* 描述 */
.card-desc{
  font-size: 16px;
  color: #333;
  padding-bottom: 20rpx;
  margin: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}
/* 详情 */
.card-rad{
  font-size: 14px;
  color: #333;
}
